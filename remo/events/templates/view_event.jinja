    <link rel="stylesheet" href="{{ static('base/css/mapbox.css') }}"
          media="screen,projection,tv" />
    <link rel="stylesheet" href="{{ static('base/css/L.Control.Locate.css') }}"
          media="screen,projection,tv" />
  {% endcompress %}
  <!--[if lte IE 8]>
    {% compress css %}
      <link rel="stylesheet" href="{{ static('base/css/mapbox.ie.css') }}" />
